<!DOCTYPE html>
<html>
  <head>
    <title><%= t 'sitename' %></title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "/assets/nested_form.js?body=1", "data-turbolinks-track" => false %>
    <%= javascript_include_tag "form", "data-turbolinks-track" => true %>
    <%= csrf_meta_tag %>
  </head>
  <body class="<%= controller.controller_name %> <%= controller.action_name %>">
    <div class="red-line">
      <%= link_to_unless_current image_tag("english_flag.png"), locale: "en" %>
      <%= link_to_unless_current image_tag("hungarian_flag.png"), locale: "hu" %>
    </div>
    <div class="logo"><%= image_tag("diamond-way-logo.png")%></div>
    <div id="container">
      <% unless @menu_enabled != true %>
          <div class="navbar">
            <div class="navbar-inner">
            <ul class="nav">
            <li><%= link_to t('activerecord.controllers.static_pages.home.menu_title'), :controller => :static_pages, :action => :home %></li>
            <li><%= link_to t('signup'), :controller => :users, :action => :new %></li>
            <li><%= link_to t('activerecord.controllers.static_pages.traveling_teachers.menu_title'), :controller => :static_pages, :action => :traveling_teachers %></li>
            <li><%= link_to t('activerecord.controllers.static_pages.information.menu_title'), :controller => :static_pages, :action => :information %></li>
            <li><%= link_to t('activerecord.controllers.static_pages.programs.menu_title'), :controller => :static_pages, :action => :programs %></li>
            </ul>
            </div>
          </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
